<section class="well col-md-3 col-md-offset-0">
<%= form_for(@race) do |f| %>
  <% if @race.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@race.errors.count, "error") %> prohibited this race from being saved:</h2>

      <ul>
      <% @race.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :current_heat %><br>
    <%= f.text_field :current_heat %>
  </div>
  <div class="field">
    <%= f.label :start_interval %><br>
    <%= f.text_field :round_start_interval %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.text_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :lock_start_list_to_starts_only %><br>
    <%= f.check_box :lock_racer_list_finish %>
  </div>
  <div class="field">
    <%= f.label :auto_sync %><br>
    <%= f.check_box :auto_sync %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</section>
